<div class="row">
  <div class="col-xs-12">
    <div class="box">
      <div class="box-header">
        <div class="box-body">
          <div class="form-row">

            <div class="col-xs-1">
              <h1 class="box-title">Usuários</h1>
            </div>

            <div class="col-xs-10">

            </div>

            <div class="col-xs-1">
              <button onclick="addSaveUsuario('Adicionando')" type="button" class="btn btn-primary"
              data-nivel="Usuario"
              data-ativo="Ativo"
              data-toggle="modal" data-target="#modalUsuario">
              Adicionar
             </button>
          </div>
        </div>
      </div>
    </div>
    <!-- /.box-header -->
    <div class="box-body">
      <table id="tabelaUsuarios" class="tbl table table-striped">
        <thead>
          <tr>
            <th>Nome</th>
            <th>Usuario</th>
            <th>Nivel de Acesso</th>
            <th>Data de Inclusão</th>
            <th>Ativo</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          {{#each usuarios}}
          <tr>
            <td>{{nome}}</td>
            <td>{{usuario}}</td>
            <td>{{nivelAcesso}}</td>
            <td>{{#formatDate createdAt}}{{/formatDate}}</td>
            <td>{{ativo}}</td>
            <td class="acao">
              <div class="toolbar-actions">
                <div class="btn-group">
                  <button  onclick="addSaveUsuario('Alterando')" type="button" name="button" class="btn btn-primary" data-toggle="modal" data-target="#modalUsuario"
                  data-id="{{id}}"
                  data-nome="{{nome}}"
                  data-usuario="{{usuario}}"
                  data-nivel="{{nivelAcesso}}"
                  data-ativo="{{ativo}}">
                  <i class="fa fa-edit"></i></button>
                </div>
                <div class="btn-group">
                  <form action="/usuarios/listUsuario/deletar" method="post">
                    <input type="hidden" name="id" value="{{id}}">
                    <button type="submit" name="button" class="btn btn-danger"><i class="fa fa-trash-o"></i></button>
                  </form>
                </div>
              </div>
            </td>
          </tr>
          {{/each}}
        </tbody>
        <tfoot>
          <tr>
            <th>Nome</th>
            <th>Usuario</th>
            <th>Nivel de Acesso</th>
            <th>Data de Inclusão</th>
            <th>Ativo</th>
          </tr>
        </tfoot>
      </table>
    </div>
  </div>
</div>
</div>

<!-- ------------------------        MODAL         ------------------------ -->

<div class="modal fade bd-example-modal-lg" tabindex="-1" role="dialog" aria-hidden="true" id="modalUsuario">
  <form name="formUsuario" id="formUsuario" method="post">
    <input type="hidden" name="id" id="id" value="{{id}}">
    <div class="modal-dialog modal-lg modal-dialog-scrollable" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" onclick="resetFormUsuario()" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
          <h4 class="modal-title">Adicionar Usuario</h4>
        </div>

        <div class="modal-body">
          <div class="box-body">
            <div class="row">
              <div class="col-xs-12">
                <span>Nome</span>
                <input type="text" class="form-control" name="nome" id="nome">
              </div>
            </div>
            <div style="margin-top: 2%;"class="row">
            </div>
            <div style="margin-top: 2%;" class="row">
              <div class="col-xs-5">
                <span>Usuario</span>
                <input type="text" class="form-control" name="usuario" id="usuario">
              </div>
              <div class="col-xs-3">
                <span>Nivel de Acesso</span>
                <select id="nivelAcesso" name="nivelAcesso" class="form-control">
                  <option value='Usuario'> Usuário </option>
                  <option value='Estoquista'> Estoquista </option>
                  <option value='Gerente'> Gerente </option>
                  <option value='Administrador'> Administrador </option>
                </select>
              </div>
              <div class="col-xs-2">
                <span>Ativo</span>
                <select id="ativo" name="ativo" class="form-control">
                  <option value='Ativo'> SIM </option>
                  <option value='Inativo'> NÃO </option>
                </select>
              </div>
            </div>
            <div id="divSenha" style="margin-top: 2%;" class="row">
              <div class="col-xs-5">
                <span>Senha</span>
                <input type="password" class="form-control" name="senha" id="senha">
              </div>
            </div>
          </div>
        </div>
        <div style="position: relative;" class="modal-footer">
          <button type="button" onclick="resetFormUsuario()" class="btn btn-default pull-left" data-dismiss="modal">Cancelar</button>
          <button style="position: absolute;" type="button" onclick="return validarFormUsuario('adicionar')" class="salvar btn btn-primary">Salvar</button>
          <button type="button" onclick="return validarFormUsuario('editar')" class="editar btn btn-primary">Editar</button>
        </div>
      </div>
      <!-- /.modal-content -->
    </div>
  </form>
</div>
